{
  "manifest_version": 3,
  "name": "CommentPulse - 评论脉搏",
  "version": "1.1.0",
  "description": "B站评论分析工具，实时分析视频评论情绪、关键词和精选评论",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://www.bilibili.com/*",
    "https://*.bilibili.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/video/*",
        "https://*.bilibili.com/video/*"
      ],
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "CommentPulse - 点击分析评论"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/*.js",
        "css/*.css",
        "assets/*"
      ],
      "matches": ["https://www.bilibili.com/*", "https://*.bilibili.com/*"]
    }
  ]
}
